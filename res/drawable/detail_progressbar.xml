<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="3dip" />

            <gradient
                android:angle="270"
                android:centerColor="#e89f03"
                android:centerY="0.75"
                android:endColor="#e89f03"
                android:startColor="#e89f03" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="3dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#4b9f59"
                    android:centerY="0.75"
                    android:endColor="#4b9f59"
                    android:startColor="#4b9f59" />
            </shape>
        </clip>
    </item>

</layer-list>