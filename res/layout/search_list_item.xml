<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:paddingTop="15dp" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/search_logo_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/search_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/search_logo_image"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/search_logo_image"
        android:maxEms="8"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/search_down_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/search_name"
        android:layout_below="@id/search_name"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:textColor="@color/text_col"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/search_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/search_down_num"
        android:layout_toRightOf="@id/search_down_num"
        android:paddingLeft="12dp"
        android:singleLine="true"
        android:textColor="@color/text_col"
        android:textSize="13sp" />

    <ProgressBar
        android:id="@+id/search_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:progressDrawable="@drawable/list_progressbar" />

    <Button
        android:id="@+id/search_dowble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/search_progressBar"
        android:layout_alignLeft="@id/search_progressBar"
        android:layout_alignRight="@id/search_progressBar"
        android:layout_alignTop="@id/search_progressBar"
        android:background="@color/transparent"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:onClick="favoriteShop"
        android:text="@string/app_dowble"
        android:textColor="@color/white"
        android:textSize="12sp" />

</RelativeLayout>