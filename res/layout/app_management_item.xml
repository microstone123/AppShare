<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:paddingTop="15dp" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/manage_logo_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        app:corner_radius="5dip"
        app:is_oval="false" />

    <TextView
        android:id="@+id/manage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/manage_logo_image"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/manage_logo_image"
        android:maxEms="8"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/manage_down_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/manage_name"
        android:layout_below="@id/manage_name"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:textColor="@color/text_col"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/manage_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/manage_down_num"
        android:layout_toRightOf="@id/manage_down_num"
        android:paddingLeft="12dp"
        android:singleLine="true"
        android:textColor="@color/text_col"
        android:textSize="13sp" />

    <ProgressBar
        android:id="@+id/usermanage_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@id/manage_logo_image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:progressDrawable="@drawable/list_progressbar" />

    <Button
        android:id="@+id/manage_updata_btn"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@id/usermanage_progressBar"
        android:layout_alignLeft="@id/usermanage_progressBar"
        android:layout_alignRight="@id/usermanage_progressBar"
        android:layout_alignTop="@id/usermanage_progressBar"
        android:background="@color/transparent"
        android:focusable="false"
        android:onClick="favoriteShop"
        android:text="@string/updata_text"
        android:textColor="@color/white"
        android:textSize="12sp" />

</RelativeLayout>